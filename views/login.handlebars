<div class="card">
    <div class="card-header">
        <h2>Login</h2>
    </div>

    <form id="login-form" class="card-body">
        <div>
            <label for="username-input-login">Username</label>
            <input type="text" id="username-input-login" />
        </div>

        <div>
            <label for="password-input-login">Password</label>
            <input type="password" id="password-input-login" />
        </div>

        <button id="login-btn" class="btn"type="submit">Login</button>
        
        <a href="/signup" type="button">Sign up</a>
    </form>
</div>
